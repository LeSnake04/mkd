root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.rs]
indent_style = tab
max_line_length = 100

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.har,*.json}]
indent_size = 2

[{*playbook.yaml,*playbook.yml,main.yaml,main.yml}]
indent_size = 2
